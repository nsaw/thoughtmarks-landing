---
const trustSignals = [
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
          </svg>`,
    title: "Privacy First",
    description: "Your data stays yours. Encrypted end-to-end."
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>`,
    title: "No Ads, Ever",
    description: "Built for humans, not advertisers."
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
          </svg>`,
    title: "Made With Care",
    description: "Built by people who forget things too."
  }
];
---

<section id="social-proof" class="section bg-bg-elevated relative overflow-hidden">
  <!-- Background accent -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-[600px] h-[300px] 
                bg-gradient-to-t from-accent/5 to-transparent blur-3xl"></div>
  </div>

  <div class="container-wide relative z-10">
    <!-- Waitlist Count (if available) -->
    <div class="text-center mb-16">
      <p class="text-brand-yellow font-script text-xl sm:text-2xl mb-2">
        join the curious
      </p>
      <p class="text-3xl sm:text-4xl font-bold text-white mb-2">
        Be among the first to try Thoughtmarks
      </p>
      <p class="text-lg text-zinc-400">
        Early access opening soon for waitlist members
      </p>
    </div>

    <!-- Trust Signals Grid -->
    <div class="grid sm:grid-cols-3 gap-8 max-w-4xl mx-auto">
      {trustSignals.map((signal) => (
        <div class="text-center space-y-4">
          <!-- Icon -->
          <div class="inline-flex p-4 rounded-2xl bg-zinc-900 border border-zinc-800">
            <div class="text-accent" set:html={signal.icon} />
          </div>
          
          <!-- Content -->
          <div>
            <h3 class="text-lg font-bold text-white mb-2">
              {signal.title}
            </h3>
            <p class="text-zinc-400 text-sm">
              {signal.description}
            </p>
          </div>
        </div>
      ))}
    </div>

    <!-- Platform Badge -->
    <div class="mt-16 flex flex-col items-center gap-4">
      <p class="text-sm text-zinc-500">
        Available on
      </p>
      <div class="flex items-center gap-3">
        <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
          <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
        </svg>
        <span class="text-white font-semibold">iOS</span>
        <span class="text-zinc-600">â€¢</span>
        <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
          <path d="M18 2H6c-1.1 0-2 .9-2 2v16c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm-7 18c-.55 0-1-.45-1-1s.45-1 1-1 1 .45 1 1-.45 1-1 1zm6-4H7V5h10v11z"/>
        </svg>
        <span class="text-white font-semibold">Apple Watch</span>
      </div>
    </div>
  </div>
</section>

