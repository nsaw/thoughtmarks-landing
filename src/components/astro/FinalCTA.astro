---
import WaitlistCTA from '../react/WaitlistCTA';
---

<section id="download" class="section bg-bg-elevated relative overflow-hidden">
  <!-- Background accent -->
  <div class="absolute inset-0">
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 
                w-[600px] h-[400px] bg-accent/5 rounded-full blur-3xl"></div>
  </div>

  <div class="container-narrow relative z-10">
    <div class="text-center space-y-8">
      <!-- Tagline -->
      <p class="tagline-script text-2xl sm:text-3xl">
        bookmarks for your brain
      </p>

      <!-- Headline -->
      <h2 class="text-h1 font-bold text-text-primary">
        Ready to never forget again?
      </h2>

      <!-- Description -->
      <p class="text-xl text-text-secondary max-w-xl mx-auto">
        Start capturing your best ideas today. Free to try, no credit card required.
      </p>

      <!-- Waitlist CTA -->
      <div class="flex flex-col items-center gap-6">
        <WaitlistCTA variant="primary" size="lg" client:load>
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
          </svg>
          Join the Waitlist
        </WaitlistCTA>

        <p class="text-sm text-text-muted">
          Available on iOS. Apple Watch companion included.
        </p>
      </div>

      <!-- Trust signals -->
      <div class="flex flex-wrap justify-center gap-8 pt-8 border-t border-border">
        <div class="text-center">
          <p class="text-2xl font-bold text-text-primary">Free</p>
          <p class="text-sm text-text-muted">14-day trial</p>
        </div>
        <div class="text-center">
          <p class="text-2xl font-bold text-text-primary">Secure</p>
          <p class="text-sm text-text-muted">End-to-end encrypted</p>
        </div>
        <div class="text-center">
          <p class="text-2xl font-bold text-text-primary">Private</p>
          <p class="text-sm text-text-muted">Your data stays yours</p>
        </div>

      </div>
    </div>
  </div>
</section>


