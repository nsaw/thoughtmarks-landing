---
// src/components/astro/RelatedContent.astro
// Displays related pages for internal linking and improved SEO

interface RelatedLink {
  title: string;
  href: string;
  description: string;
  category?: string;
}

interface Props {
  links: RelatedLink[];
  title?: string;
}

const { links, title = "You Might Also Like" } = Astro.props;
---

<section class="mt-16 pt-12 border-t border-zinc-800">
  <h2 class="text-xl font-bold text-white mb-6">{title}</h2>
  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
    {links.map((link) => (
      <a
        href={link.href}
        class="block bg-zinc-900/50 border border-zinc-800 rounded-xl p-4
               hover:border-accent/50 hover:bg-zinc-900/70 transition-all duration-200 group"
      >
        {link.category && (
          <span class="text-accent text-xs font-semibold uppercase tracking-wider mb-2 block">
            {link.category}
          </span>
        )}
        <h3 class="text-white font-semibold group-hover:text-accent transition-colors mb-2">
          {link.title}
        </h3>
        <p class="text-zinc-400 text-sm line-clamp-2">
          {link.description}
        </p>
      </a>
    ))}
  </div>
</section>

