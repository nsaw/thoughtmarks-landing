---
import Button from './Button.astro';
import PhoneMockup from './PhoneMockup.astro';
import HeroCycler from '../react/HeroCycler';
import WaitlistCTA from '../react/WaitlistCTA';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20">
  <!-- Organic blob shapes (decorative, hidden from screen readers) -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
    <!-- Large warm blob top right -->
    <div class="absolute -top-40 -right-40 w-[600px] h-[600px] rounded-full 
                bg-gradient-to-br from-amber-500/8 via-orange-400/5 to-transparent 
                blur-3xl animate-float"></div>
    
    <!-- Blue accent blob left -->
    <div class="absolute top-1/3 -left-32 w-[400px] h-[400px] rounded-full 
                bg-gradient-to-r from-accent/10 to-blue-400/5 
                blur-3xl animate-float animation-delay-200"></div>
    
    <!-- Subtle bottom glow -->
    <div class="absolute -bottom-20 left-1/4 w-[500px] h-[300px] rounded-full 
                bg-gradient-to-t from-accent/8 to-transparent 
                blur-3xl"></div>
    
    <!-- Small floating orb -->
    <div class="absolute top-1/4 right-1/4 w-32 h-32 rounded-full 
                bg-brand-yellow/5 blur-2xl animate-float animation-delay-300"></div>
  </div>

  <div class="container-wide relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
      <!-- Copy -->
      <div class="text-center lg:text-left space-y-8">
        <!-- Tagline -->
        <p class="tagline-script text-2xl sm:text-3xl">
          bookmarks for your brain
        </p>

        <!-- Cycling Headlines -->
        <HeroCycler client:load />

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start pt-4">
        <WaitlistCTA variant="primary" size="lg" client:load>
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
          </svg>
          Chronically Curious?
        </WaitlistCTA>
          <Button href="#how-it-works" variant="secondary" size="lg">
            See how it works
          </Button>
        </div>

        <!-- Trust signal -->
        <p class="text-sm text-zinc-500">
          14 days free. For people with better things to remember.
        </p>
      </div>

      <!-- App Mockup with 3D device frame -->
      <div class="relative flex justify-center lg:justify-end">
        <!-- Glow behind phone (decorative) -->
        <div class="absolute inset-0 flex items-center justify-center pointer-events-none" aria-hidden="true">
          <div class="w-[400px] h-[600px] bg-gradient-to-b from-accent/20 via-accent/10 to-transparent 
                      rounded-full blur-3xl"></div>
        </div>

        <PhoneMockup 
          src="/assets/MAIN-mockup-page-dashboard.PNG" 
          alt="Thoughtmarks dashboard - capture ideas at the speed of life"
          priority={true}
        />
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2">
    <a href="#features" class="flex flex-col items-center gap-2 text-zinc-500 
                               hover:text-zinc-300 transition-colors group">
      <span class="text-sm font-medium">The good stuff</span>
      <svg class="w-5 h-5 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </a>
  </div>
</section>
