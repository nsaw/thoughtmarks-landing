---
const currentYear = new Date().getFullYear();

const footerLinks = {
  product: [
    { label: 'Features', href: '#features' },
    { label: 'How It Works', href: '#how-it-works' },
    { label: 'Download', href: '#download' },
    { label: 'Blog', href: '/blog' },
  ],
  support: [
    { label: 'Help Center', href: '/support' },
    { label: 'Apple Watch', href: '/support/watch' },
    { label: 'Contact', href: 'mailto:support@thoughtmarks.app' },
  ],
  legal: [
    { label: 'Privacy Policy', href: '/legal/privacy' },
    { label: 'Terms of Service', href: '/legal/terms' },
    { label: 'EULA', href: '/legal/eula' },
  ],
};
---

<footer class="bg-bg-base border-t border-border">
  <div class="container-wide py-16">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-12 lg:gap-16">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="flex items-center gap-3 mb-4">
          <img
            src="/assets/AppIcon.png?cb=v4"
            alt="Thoughtmarks"
            class="h-10 w-10 rounded-xl"
            width="40"
            height="40"
          />
          <span class="text-lg font-bold text-text-primary tracking-tight">
            THOUGHTMARKS
          </span>
        </a>
        <p class="text-text-muted text-sm leading-relaxed">
          Bookmarks for your brain. Capture ideas at the speed of life.
        </p>
      </div>

      <!-- Product Links -->
      <div>
        <h4 class="text-sm font-semibold text-text-primary uppercase tracking-wider mb-4">
          Product
        </h4>
        <ul class="space-y-3">
          {footerLinks.product.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-text-secondary hover:text-text-primary transition-colors text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Support Links -->
      <div>
        <h4 class="text-sm font-semibold text-text-primary uppercase tracking-wider mb-4">
          Support
        </h4>
        <ul class="space-y-3">
          {footerLinks.support.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-text-secondary hover:text-text-primary transition-colors text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal Links -->
      <div>
        <h4 class="text-sm font-semibold text-text-primary uppercase tracking-wider mb-4">
          Legal
        </h4>
        <ul class="space-y-3">
          {footerLinks.legal.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-text-secondary hover:text-text-primary transition-colors text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-border flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-text-muted text-sm">
        &copy; {currentYear} Thoughtmarks. All rights reserved.
      </p>
      <div class="flex items-center gap-6">
        <a
          href="https://twitter.com/thoughtmarks"
          class="text-text-muted hover:text-text-secondary transition-colors"
          aria-label="Twitter"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
        <a
          href="https://instagram.com/thoughtmarks"
          class="text-text-muted hover:text-text-secondary transition-colors"
          aria-label="Instagram"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>

