---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Nav from '@/components/astro/Nav.astro';
import Footer from '@/components/astro/Footer.astro';
import Card from '@/components/astro/Card.astro';

const legalDocs = [
  {
    title: 'Privacy Policy',
    description: 'How we protect and handle your data with GDPR and CCPA compliance.',
    href: '/legal/privacy',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" 
                  d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>`,
  },
  {
    title: 'Terms of Service',
    description: 'Usage terms, acceptable use policy, and user agreements.',
    href: '/legal/terms',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" 
                  d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>`,
  },
  {
    title: 'End User License Agreement',
    description: 'License terms for using the Thoughtmarks mobile application.',
    href: '/legal/eula',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" 
                  d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"/>
          </svg>`,
  },
];
---

<BaseLayout
  title="Legal | Thoughtmarks"
  description="Thoughtmarks legal documents including Privacy Policy, Terms of Service, and End User License Agreement."
>
  <Nav />
  
  <main class="pt-24 pb-16">
    <div class="container-narrow">
      <header class="text-center mb-16">
        <h1 class="text-h1 font-bold text-text-primary mb-4">Legal</h1>
        <p class="text-xl text-text-secondary">
          Transparency and trust are core to how we operate.
        </p>
      </header>

      <div class="grid gap-6">
        {legalDocs.map((doc) => (
          <a href={doc.href} class="block group">
            <Card class="flex items-start gap-6 group-hover:border-accent/50">
              <div class="text-accent flex-shrink-0" set:html={doc.icon} />
              <div>
                <h2 class="text-xl font-semibold text-text-primary mb-2 
                           group-hover:text-accent transition-colors">
                  {doc.title}
                </h2>
                <p class="text-text-secondary">
                  {doc.description}
                </p>
              </div>
              <svg class="w-5 h-5 text-text-muted group-hover:text-accent 
                          group-hover:translate-x-1 transition-all flex-shrink-0 ml-auto" 
                   fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M9 5l7 7-7 7"/>
              </svg>
            </Card>
          </a>
        ))}
      </div>

      <div class="mt-12 text-center">
        <p class="text-text-muted text-sm">
          Questions about our legal policies?{' '}
          <a href="mailto:legal@thoughtmarks.app" class="text-accent hover:text-accent-hover">
            Contact our legal team
          </a>
        </p>
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>

