---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Nav from '@/components/astro/Nav.astro';
import Footer from '@/components/astro/Footer.astro';

// Note: This is a placeholder. Implement content collections when ready to publish blog posts.
const posts = [
  {
    title: "Coming Soon",
    slug: "coming-soon",
    description: "Blog posts will appear here soon.",
    date: "2024-12-05"
  }
];
---

<BaseLayout
  title="Blog | Thoughtmarks"
  description="Insights on productivity, note-taking, and capturing ideas at the speed of life."
>
  <Nav transparent={false} />
  
  <main class="min-h-screen pt-32 pb-20">
    <div class="container-narrow">
      <!-- Header -->
      <div class="text-center mb-16">
        <p class="tagline-script text-2xl sm:text-3xl mb-4">
          insights & ideas
        </p>
        <h1 class="text-4xl sm:text-5xl font-black text-white mb-6 leading-tight">
          The Thoughtmarks Blog
        </h1>
        <p class="text-xl text-zinc-400 max-w-2xl mx-auto">
          Thoughts on productivity, creativity, and building a second brain that actually works.
        </p>
      </div>

      <!-- Posts Grid (Placeholder) -->
      <div class="space-y-8">
        <div class="text-center py-20 bg-zinc-900/50 border border-zinc-800 rounded-2xl">
          <svg class="w-16 h-16 mx-auto mb-6 text-zinc-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
          </svg>
          <h2 class="text-2xl font-bold text-white mb-3">
            Coming Soon
          </h2>
          <p class="text-zinc-400 mb-8">
            We're working on some great content. Check back soon!
          </p>
          <a 
            href="/"
            class="inline-flex items-center gap-2 px-6 py-3 bg-accent text-white 
                   rounded-xl hover:bg-accent-hover transition-colors font-semibold"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Back to Home
          </a>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>

