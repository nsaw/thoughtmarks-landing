---
// src/pages/blog/index.astro
import BaseLayout from '@/layouts/BaseLayout.astro';
import Nav from '@/components/astro/Nav.astro';
import Footer from '@/components/astro/Footer.astro';

const posts = [
  {
    title: "The Complete Guide to Capturing Ideas (Before You Forget Them)",
    slug: "capturing-ideas-complete-guide",
    description: "Why we forget our best ideas, the science behind idea capture, and practical systems to never lose a great thought again.",
    date: "2024-12-01",
    category: "Idea Capture",
    readTime: "12 min"
  },
  {
    title: "Second Brain Apps Compared: 2024 Ultimate Guide",
    slug: "second-brain-apps-compared",
    description: "Notion vs Obsidian vs Roam vs Apple Notes vs Thoughtmarks. The honest comparison of PKM and second brain apps.",
    date: "2024-12-01",
    category: "Tools & Reviews",
    readTime: "15 min"
  },
  {
    title: "Voice Notes vs Typing: What Science Says About Idea Capture",
    slug: "voice-notes-vs-typing",
    description: "Speaking is 3x faster than typing and preserves the flow of thought. The science behind why voice capture is better for ideas.",
    date: "2024-12-01",
    category: "Science & Research",
    readTime: "8 min"
  },
  {
    title: "ADHD Productivity: Tools That Actually Work",
    slug: "adhd-productivity-tools",
    description: "Not another productivity system that makes you feel broken. Tools and techniques designed for how ADHD brains actually function.",
    date: "2024-12-01",
    category: "ADHD & Productivity",
    readTime: "10 min"
  },
  {
    title: "How AI is Changing Note-Taking Forever",
    slug: "ai-changing-note-taking",
    description: "From manual filing to automatic organization. From keyword search to semantic understanding. The AI revolution in personal knowledge management.",
    date: "2024-12-01",
    category: "AI & Technology",
    readTime: "9 min"
  },
];
---

<BaseLayout
  title="Blog | Thoughtmarks"
  description="Insights on productivity, note-taking, and capturing ideas at the speed of life."
>
  <Nav transparent={false} />
  
  <main class="min-h-screen pt-32 pb-20">
    <div class="container-narrow">
      <div class="text-center mb-16">
        <p class="tagline-script text-2xl sm:text-3xl mb-4">
          insights & ideas
        </p>
        <h1 class="text-4xl sm:text-5xl font-black text-white mb-6 leading-tight">
          The Thoughtmarks Blog
        </h1>
        <p class="text-xl text-zinc-400 max-w-2xl mx-auto">
          Thoughts on productivity, creativity, and building a second brain that actually works.
        </p>
      </div>

      <div class="space-y-6">
        {posts.map((post) => (
          <a 
            href={`/blog/${post.slug}`}
            class="block bg-zinc-900/50 border border-zinc-800 rounded-2xl p-6 sm:p-8
                   hover:border-accent/50 hover:bg-zinc-900/70 transition-all duration-200 group"
          >
            <div class="flex flex-wrap items-center gap-3 mb-4">
              <span class="text-accent text-xs font-semibold uppercase tracking-wider">
                {post.category}
              </span>
              <span class="text-zinc-600">•</span>
              <span class="text-zinc-500 text-sm">{post.date}</span>
              <span class="text-zinc-600">•</span>
              <span class="text-zinc-500 text-sm">{post.readTime}</span>
            </div>
            <h2 class="text-xl sm:text-2xl font-bold text-white mb-3 group-hover:text-accent transition-colors">
              {post.title}
            </h2>
            <p class="text-zinc-400 leading-relaxed">
              {post.description}
            </p>
            <div class="mt-4 flex items-center gap-2 text-accent text-sm font-semibold">
              <span>Read more</span>
              <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>
